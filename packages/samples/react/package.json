{
	"name": "@public-ui/sample-react",
	"version": "3.0.0-rc.0",
	"description": "This app contains samples for the KoliBri/Public UI",
	"license": "EUPL-1.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/public-ui/kolibri"
	},
	"scripts": {
		"build": "rimraf dist && cross-env NODE_ENV=production webpack",
		"build:deps": "pnpm --filter @public-ui/sample-react^... build",
		"format": "prettier --check src",
		"lint": "tsc --noemit && eslint \"{src,tests,e2e}/**/*.{html,js,json,jsx,ts,tsx,gql,graphql}\"",
		"postinstall": "pnpm exec playwright install",
		"prepare": "npm-run-all prepare:*",
		"prepare:components-assets": "cpy \"node_modules/@public-ui/components/assets/**/*\" public/assets --dot",
		"prepare:themes-assets": "cpy \"node_modules/@public-ui/themes/assets/**/*\" public/assets --dot",
		"serve": "cross-env NODE_ENV=development webpack serve --devtool=source-map",
		"start": "npm run serve -- --open",
		"test": "pnpm test:e2e",
		"test:e2e": "playwright test",
		"unused": "knip"
	},
	"dependencies": {
		"@leanup/stack": "1.3.54",
		"@leanup/stack-react": "1.3.54",
		"@leanup/stack-webpack": "1.3.54",
		"@playwright/test": "1.49.0",
		"@public-ui/components": "workspace:*",
		"@public-ui/react": "workspace:*",
		"@public-ui/themes": "workspace:*",
		"@stencil/core": "4.22.3",
		"@types/node": "ts5.6",
		"@types/react": "18.3.4",
		"@types/react-dom": "18.3.1",
		"@typescript-eslint/eslint-plugin": "8.17.0",
		"@typescript-eslint/parser": "8.17.0",
		"@unocss/preset-uno": "0.58.9",
		"@unocss/webpack": "0.58.9",
		"adopted-style-sheets": "1.1.6",
		"ajv": "8.17.1",
		"chromedriver": "130.0.4",
		"cpy-cli": "5.0.0",
		"cross-env": "7.0.3",
		"css-loader": "7.1.2",
		"esbuild-loader": "4.2.2",
		"eslint": "^8",
		"eslint-plugin-html": "8.1.2",
		"eslint-plugin-json": "^3",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.2",
		"file-loader": "6.2.0",
		"formik": "2.4.6",
		"knip": "5.39.2",
		"less-loader": "12.2.0",
		"mini-css-extract-plugin": "2.9.2",
		"nightwatch-axe-verbose": "2.3.1",
		"npm-run-all": "4.1.5",
		"postcss-loader": "8.1.1",
		"prettier": "3.4.2",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-number-format": "5.4.2",
		"react-router": "6.28.0",
		"react-router-dom": "6.28.0",
		"rimraf": "6.0.1",
		"sass-loader": "16.0.4",
		"string-replace-loader": "3.1.0",
		"tslib": "2.8.1",
		"typescript": "5.6.3",
		"webpack": "5.97.0",
		"webpack-cli": "5.1.4",
		"webpack-dev-server": "5.1.0",
		"world_countries_lists": "2.9.0",
		"yup": "1.4.0"
	},
	"files": [
		".eslintignore",
		".eslintrc.js",
		".gitignore",
		".prettierignore",
		"dist/**",
		"prettier.config.js",
		"public/**",
		"src/**",
		"test-build.sh",
		"tsconfig.json",
		"unocss.config.ts",
		"webpack.config.js"
	]
}
